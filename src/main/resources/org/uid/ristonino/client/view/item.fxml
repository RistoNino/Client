<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.uid.ristonino.client.controller.MenuItemController" fx:id="itemView" spacing="40">
    <Label fx:id="quantity" visible="false" text="0"/>
    <VBox maxWidth="Infinity">
        <Label fx:id="name"/>
        <Label fx:id="description"/>
        <Label fx:id="ingredients"/>
    </VBox>
    <HBox alignment="CENTER" spacing="15">
        <Label fx:id="price"/>
        <Label fx:id="total" text="0.00" visible="false"/>
    </HBox>
    <VBox alignment="CENTER_RIGHT" spacing="5">
        <Button text="+" fx:id="add" styleClass="bigButton" onAction="#addItem"/>
        <Button text="-" fx:id="remove" styleClass="littleButton" visible="false" onAction="#removeItem"/>
    </VBox>
</HBox>



